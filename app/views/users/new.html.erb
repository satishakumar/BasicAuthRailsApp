<div>
	<%= form_for @user do |f|%>
		<div class="form-group">
			<%=f.label :name%>
			<%=f.text_field :name%>
		</div>

		<div class="form-group">
			<%=f.label :email%>
			<%=f.text_field :email%>
		</div>

		<div class="form-group">
			<%=f.label :password%>
			<%=f.text_field :password_digest, :type => "password"%>
		</div>
		<%= f.submit "Submit", :class => "btn btn-default"%>
	<% end %>
</div>